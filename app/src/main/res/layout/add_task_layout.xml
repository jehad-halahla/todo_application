<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Task Title Input -->
    <EditText

        android:id="@+id/edit_text_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:hint="Task Title"
        android:textColor="@android:color/secondary_text_dark"
        android:textColorHint="@color/hint_color"
        android:inputType="textPersonName"
        android:padding="16dp" />

    <!-- Task Description Input -->
    <EditText
        android:id="@+id/edit_text_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Task Description"
        android:textColor="@android:color/secondary_text_dark"
        android:textColorHint="@color/hint_color"

        android:inputType="textMultiLine"
        android:padding="16dp" />

    <!-- Due Date Input -->
    <EditText
        android:id="@+id/edit_text_task_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Due Date (YYYY-MM-DD)"
        android:textColor="@android:color/secondary_text_dark"
        android:textColorHint="@color/hint_color"

        android:inputType="date"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background"
        />

    <!-- Due Time Input -->
    <EditText
        android:id="@+id/edit_text_task_due_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Due Time (HH:MM)"
        android:textColor="@android:color/secondary_text_dark"
        android:textColorHint="@color/hint_color"

        android:inputType="time"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background"
        />

    <!-- Priority Spinner -->
    <Spinner
        android:id="@+id/spinner_task_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="15dp" />

    <!-- Completed Checkbox -->

    <!-- Reminder Set Checkbox -->

    <!-- Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@color/cardview_shadow_end_color"
            android:text="Cancel"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/button_add_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:text="Add"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
